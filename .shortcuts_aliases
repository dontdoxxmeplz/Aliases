# Unix
alias e="$EDITOR"
alias v="$VISUAL"

# ls specifics
if command -v exa &> /dev/null
then
    alias ls='exa -a'
fi
alias ll="ls -l"
alias ln="ln -v"
alias l='ls -l'
alias la='ls'
alias lla='ls -l'
alias lt='ls --tree'
alias ip='ip -c'
alias rm='rm -i'

# Remove
alias ra="rm -rf"

# Create directory and subdirectory by default with mkdir command
alias mkdir="mkdir -p"

# Dos 2 unix recursive
alias d2u='find . -type f -print0 | xargs -0 dos2unix'

# Open ranger terminal file manager
alias r='ranger .'

# Electerm
alias el='electerm &'

# Print all hostnames
alias hostname='hostname -A'

# Grant execution right to all .sh files inside the current directory recursively
alias rexec='find . -type f -iname "*.sh" -exec chmod +x {} \;'

# Open atom in the current directory
alias a='atom .'

# History grep text
alias gh='history|grep'

# Python3 shortcut
alias p3='python3'

# Cat a file and put the content in the clipboard
alias caty='xclip -sel c <' # copy cotent of the file in clipboard, ex : caty input.txt

# Restart vmtool service
rvmtool='sudo systemctl restart vmtoolsd.service'

# Mullvad
alias mullvad='sudo openvpn --config'
alias mulvad='sudo openvpn --config'
alias mulv='sudo openvpn --config'
alias muvad='sudo openvpn --config'
