function krmqmanage {
if [ -z "$1" ]; then
  echo "Usage: krmqmanage [NAMESPACE]"
  echo "       krmqmanage rabbitmq-dev"
else
  if [ $(kubectl rabbitmq -A list | grep -E "$1-instance" | wc -l) -eq 1 ]; then
    echo Start managing rabbitmq target instance..
    kubectl rabbitmq -n "$1" manage "$1-instance"
  else
    echo Instance $1-instance in the namespace $1
  fi
fi
}


function krmqdeploy {
if [ -z "$1" ] || [ -z "$2" ] || [ -z "$3" ]; then
  echo "Usage: krmqdeploy [NAMESPACE] [REPLCICAS] [STORAGECLASS]"
  echo "       krmqdeploy rabbitmq-lab 1 longhorn"
else
  if [ $(kubectl get ns -A | grep -E "$1" | wc -l) -eq 0 ]; then
    echo Deploying rabbitmq cluster..
    kubectl create namespace "$1" && krmq -n "$1" create "$1-instance" --replicas "$2" --service ClusterIP --storage-class "$3"
    echo Installing the RabbitMQ Cluster, Waiting 30secs..
    sleep 35
    kubectl rabbitmq -n "$1" enable-all-feature-flags "$1-instance"
  fi
fi
}

fi

SAVEIFS=$IFS
IFS="$(printf '\n\t')"
function extract {
 if [ -z "$1" ]; then
    # display usage if no parameters given
    echo "Usage: extract <path/file_name>.<zip|rar|bz2|gz|tar|tbz2|tgz|Z|7z|xz|ex|tar.bz2|tar.gz|tar.xz>"
    echo "       extract <path/file_name_1.ext> [path/file_name_2.ext] [path/file_name_3.ext]"
 else
    for n in "$@"
    do
      if [ -f "$n" ] ; then
          case "${n%,}" in
            *.cbt|*.tar.bz2|*.tar.gz|*.tar.xz|*.tbz2|*.tgz|*.txz|*.tar) 
                         tar xvf "$n"       ;;
            *.lzma)      unlzma ./"$n"      ;;
            *.bz2)       bunzip2 ./"$n"     ;;
            *.cbr|*.rar) unrar x -ad ./"$n" ;;
            *.gz)        gunzip ./"$n"      ;;
            *.cbz|*.epub|*.zip) unzip ./"$n"       ;;
            *.z)         uncompress ./"$n"  ;;
            *.7z|*.apk|*.arj|*.cab|*.cb7|*.chm|*.deb|*.dmg|*.iso|*.lzh|*.msi|*.pkg|*.rpm|*.udf|*.wim|*.xar)
                         7z x ./"$n"        ;;
            *.xz)        unxz ./"$n"        ;;
            *.exe)       cabextract ./"$n"  ;;
            *.cpio)      cpio -id < ./"$n"  ;;
            *.cba|*.ace) unace x ./"$n"      ;;
            *.zpaq)      zpaq x ./"$n"      ;;
            *.arc)       arc e ./"$n"       ;;
            *.cso)       ciso 0 ./"$n" ./"$n.iso" && \
                              extract $n.iso && \rm -f $n ;;
            *)
                         echo "extract: '$n' - unknown archive method"
                         return 1
                         ;;
          esac
      else
          echo "'$n' - file does not exist"
          return 1
      fi
    done
fi
}
IFS=$SAVEIFS
